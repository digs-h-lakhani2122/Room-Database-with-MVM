<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/layoutshape"
    android:layout_gravity="center"
    tools:context=".screen2" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTER STUDENT DETAILS"
        android:textSize="20sp"
        android:textColor="@color/blue"
        android:gravity="center"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Student name"
        android:layout_marginTop="20dp"
        android:textColor="#570420"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Department"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/departmentEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/student_department"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Semester"
        android:layout_marginTop="20dp"
        tools:ignore="HardcodedText" />

    <Spinner
        android:id="@+id/semesterEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/student_semester"/>

    <EditText
        android:id="@+id/projectEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter Project Name"
        android:textColor="#076C63"
        tools:ignore="Autofill,HardcodedText,TextFields" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/light"
        android:text="VIEW"
        tools:ignore="HardcodedText" />

</LinearLayout>